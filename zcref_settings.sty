% zcref_settings.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{zcref_settings}[2026/01/29 zref-clever settings for Japanese]

% \RequirePackage{hyperref}    % リンクしたい場合
\RequirePackage{zref-clever}

% 日本語ラベルを宣言
% \zcDeclareLanguage{japanese}

% 参照タイプ名（単数/複数を日本語では同一に）
\zcDeclareLanguage[allcaps]{japanese}
\zcLanguageSetup{japanese}{
  namesep   = {\nobreak} ,
  pairsep   = {と} ,
  listsep   = {，} ,
  lastsep   = {，および} ,
  tpairsep  = {および} ,
  tlistsep  = {，} ,
  tlastsep  = {，および} ,
  notesep   = {：} ,
  rangesep  = {--}  ,
  type = section ,
    Name-sg = 第 ,
    Name-pl = 第 ,
    refbounds = {,,節,} ,
  type = subsection ,
    Name-sg = 第 ,
    Name-pl = 第 ,
    refbounds = {,,小節,} ,
  type = paragraph ,
    Name-sg = 第 ,
    Name-pl = 第 ,
    refbounds = {,,段落,} ,
  type = page ,
    Name-sg = p. ,
    Name-pl = pp. ,
    rangesep = \textendash ,
    rangetopair = false ,
  type = line ,
    Name-sg = l. ,
    Name-pl = l. ,
    rangesep = \textendash ,
    rangetopair = false ,
  type = figure ,
    Name-sg = Fig.~ ,
    Name-pl = Fig.~ ,
  type = table ,
    Name-sg = Table~ ,
    Name-pl = Table~ ,
  type = item ,
    Name-sg = 項目 ,
    Name-pl = 項目 ,
  type = equation ,
    Name-sg = 式 ,
    Name-pl = 式 ,
    refbounds = {,(,),} ,
  type = dmath ,
    Name-sg = 式 ,
    Name-pl = 式 ,
    refbounds = {,(,),} ,
}

% 全体設定（必要に応じて変更可）
\zcsetup{
  lang = japanese,
  sort = true,
  comp = true,
  abbrev = false,
  cap = false,
}
